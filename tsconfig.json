{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": false,
    "allowJs": false,
    "checkJs": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": false,
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": ".",
    "composite": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}
